                <a asp-area="" asp-controller="Products" asp-action="ProductList">Products</a>
            </nav>
        </header>

            <main role="main" class="pb-3">

                @RenderBody()

            </main>

        <footer class="border-top footer text-muted">
            &copy; 2026 - Quantify - 
            <a href="https://github.com/Zileena6" target="_blank" rel="noopener noreferrer">
                Linda Leminaho
            </a>
        </footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
